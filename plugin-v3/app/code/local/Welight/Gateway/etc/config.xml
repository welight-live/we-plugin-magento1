<?xml version="1.0"?>
<config>
    <modules>
        <Welight_Gateway>
            <version>3.9.0</version>
        </Welight_Gateway>
    </modules>
    <global>
        <models>
            <welight_gateway>
                <class>Welight_Gateway_Model</class>
                <resourceModel>welight_gateway_resource</resourceModel>
            </welight_gateway>
            <welight_gateway_resource>
                <class>Welight_Gateway_Model_Resource</class>
                <entities>
                    <kiosk>
                        <table>welight_gateway_kiosk</table>
                    </kiosk>
                </entities>
            </welight_gateway_resource>
        </models>
        <blocks>
            <welight_gateway>
                <class>Welight_Gateway_Block</class>
            </welight_gateway>
        </blocks>
        <helpers>
            <welight_gateway>
                <class>Welight_Gateway_Helper</class>
            </welight_gateway>
        </helpers>
        <resources>
            <welight_gateway_setup>
                <setup>
                    <module>Welight_Gateway</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </welight_gateway_setup>
        </resources>
        <events>
            <catalog_product_save_after>
                <observers>
                    <adminhtml_controller_action_predispatch_start>
                        <type>model</type>
                        <class>welight_gateway/observer</class>
                        <method>validateRecurringProfile</method>
                    </adminhtml_controller_action_predispatch_start>
                </observers>
            </catalog_product_save_after>
            <core_abstract_save_before>
                <observers>
                    <update_recurring_customer_id>
                        <type>model</type>
                        <class>welight_gateway/observer</class>
                        <method>updateRecurringCustomerId</method>
                    </update_recurring_customer_id>
                </observers>
            </core_abstract_save_before>

        </events>
    </global>
    <frontend>
        <routers>
            <welight_gateway>
                <use>standard</use>
                <args>
                    <module>Welight_Gateway</module>
                    <frontName>pseguro</frontName>
                </args>
            </welight_gateway>
        </routers>
        <translate>
            <modules>
                <welight_gateway>
                    <files>
                        <default>Welight_Gateway.csv</default>
                    </files>
                </welight_gateway>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <pagseguro>
                        <class>welight_gateway/observer</class>
                        <method>addDirectPaymentBlock</method>
                    </pagseguro>
                </observers>
            </core_block_abstract_to_html_after>
            <welight_gateway_kioskorder_notification_received>
                <observers>
                    <kiosk_notification>
                        <class>welight_gateway/kiosk</class>
                        <method>createOrderFromNotification</method>
                    </kiosk_notification>
                </observers>
            </welight_gateway_kioskorder_notification_received>
        </events>
        <layout>
            <updates>
                <welight_gateway>
                    <file>welight_gateway.xml</file>
                </welight_gateway>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <welight_gateway>
                    <file>welight_gateway/pagseguro.xml</file>
                </welight_gateway>
                <welight_gateway_recurring>
                    <file>welight_gateway/sales.xml</file>
                </welight_gateway_recurring>
            </updates>
        </layout>
        <events>
            <admin_session_user_login_success>
                <observers>
                    <welight_gateway_healthcheck>
                        <type>singleton</type>
                        <class>welight_gateway/healthcheck</class>
                        <method>basicCheck</method>
                    </welight_gateway_healthcheck>
                </observers>
            </admin_session_user_login_success>
            <admin_system_config_changed_section_payment>
                <observers>
                    <welight_gateway_healthcheck>
                        <type>singleton</type>
                        <class>welight_gateway/healthcheck</class>
                        <method>check</method>
                    </welight_gateway_healthcheck>
                </observers>
            </admin_system_config_changed_section_payment>
        </events>
    </adminhtml>
    <default>
        <payment>
            <pagseguro_cc>
                <model>welight_gateway/payment_ccview</model>
                <title>WE Cartão de Crédito - via PagSeguro UOL (antigo)</title>
            </pagseguro_cc>
            <rm_pagseguro_cc>
                <active>0</active>
                <title>Welight Cartão de Crédito</title>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <flag>42x20</flag>
                <payment_action>order</payment_action>
                <model>welight_gateway/payment_cc</model>
                <allowspecific>0</allowspecific>
                <send_neworder_email>0</send_neworder_email>
                <!--<specificcountry>BR</specificcountry>-->
                <group_restriction>0</group_restriction>
                <info_brl>1</info_brl>
                <total_installments>0</total_installments>
                <force_installments_selection>0</force_installments_selection>
                <installments_product>0</installments_product>
                <sort_order>1</sort_order>
            </rm_pagseguro_cc>
            <rm_pagseguro>
                <customer_cpf_attribute>taxvat</customer_cpf_attribute>
                <address_telephone_attribute>telephone</address_telephone_attribute>
                <address_street_attribute>street_1</address_street_attribute>
                <address_number_attribute>street_2</address_number_attribute>
                <address_neighborhood_attribute>street_2</address_neighborhood_attribute>
                <ws_url>http://192.168.15.40/checkout</ws_url>
                <ws_url_app>http://192.168.15.40/checkout2</ws_url_app>
                <js_url>https://stc.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js</js_url>
                <sandbox_ws_url>https://ws.sandbox.pagseguro.uol.com.br/v2/</sandbox_ws_url>
                <sandbox_ws_url_app>https://ws.ricardomartins.net.br/pspro/v7/wspagseguro/v2/</sandbox_ws_url_app>
                <sandbox_js_url>https://stc.sandbox.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js</sandbox_js_url>
                <exception_request_validate>onestepcheckout/ajax/savePaymentMethod</exception_request_validate>
                <jsdelivr_enabled>1</jsdelivr_enabled>
                <jsdelivr_minify>1</jsdelivr_minify>
            </rm_pagseguro>
            <rm_pagseguro_kiosk>
                <active>0</active>
                <title>Welight - Pagamento avulso</title>
                <order_status>pending</order_status>
                <model>welight_gateway/payment_kiosk</model>
                <allowspecific>0</allowspecific>
                <send_neworder_email>1</send_neworder_email>
            </rm_pagseguro_kiosk>
            <rm_pagseguro_recurring>
                <active>0</active>
                <title>Welight Cartão de Crédito Recorrente</title>
                <!--                <order_status>pending</order_status>-->
                <allowspecific>0</allowspecific>
                <flag>42x20</flag>
                <payment_action>order</payment_action>
                <model>welight_gateway/payment_recurring</model>
                <allowspecific>0</allowspecific>
                <send_neworder_email>1</send_neworder_email>
                <sort_order>40</sort_order>
                <group_restriction>0</group_restriction>
                <info_brl>1</info_brl>
            </rm_pagseguro_recurring>
            <!--Para referencia-->
            <!--<paypal_express>
                <model>paypal/express</model>
                <title>PayPal Express Checkout</title>
                <payment_action>Authorization</payment_action>
                <solution_type>Mark</solution_type>
                <line_items_enabled>1</line_items_enabled>
                <visible_on_cart>1</visible_on_cart>
                <visible_on_product>1</visible_on_product>
                <allow_ba_signup>never</allow_ba_signup>
                <group>paypal</group>
                <authorization_honor_period>3</authorization_honor_period>
                <order_valid_period>29</order_valid_period>
                <child_authorization_number>1</child_authorization_number>
                <verify_peer>1</verify_peer>
                <skip_order_review_step>1</skip_order_review_step>
            </paypal_express>-->
        </payment>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Welight_Gateway/>
            </modules>
        </suite>
    </phpunit>
    <crontab>
        <jobs>
            <welight_gateway_recurring_update>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>welight_gateway/cron::updateRecurringPayments</model>
                </run>
            </welight_gateway_recurring_update>
        </jobs>
    </crontab>
</config>
